---
permalink: "/"
layout: layout.liquid

renderData:
title: "Recipes"
webTitle: "Festa di Famiglia"
webTitleSlug: "Festa-di-Famiglia"

---

<div class="columns is-multiline">
    {%- for recipe in recipes-contentful -%}
    <div class="column is-one-third ">
        <a href="{{ recipe.title | slug }}">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="https:{{recipe.thumbnail.fields.file.url}}?w=960&h=1280&fm=jpg&fl=progressive&q=80&fit=fill&f=center"
                        alt="{{ recipe.title }}" loading="lazy">
                </figure>
                <!-- <a href="{{ recipe.title | slug }}">
                <div class="image is-3by2">
                    <img src="https:{{recipe.thumbnail.fields.file.url}}?w=600&h=400&fm=jpg&fl=progressive&q=80&fit=fill&f=center" alt="{{ recipe.title }}" loading="lazy">
                </div> -->
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4 has-text-dark">{{ recipe.title }}</p>
                        <p class="subtitle is-6 has-text-dark"><b>difficulty:</b>
                            {% assign handle = recipe.level %}
                            {% case handle %}
                            {% when 1 %}
                            <i class="fas fa-star"></i> <i class="far fa-star"></i> <i class="far fa-star"></i>
                            {% when 2 %}
                            <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="far fa-star"></i>
                            {% when 3 %}
                            <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
                            {% endcase %}
                        </p>
                    </div>
                </div>
                <div class="content">
                    {{ recipe.shortDescription }}
                </div>
            </div>
        </div>
        </a>
    </div>
    {%- endfor -%}
</div>
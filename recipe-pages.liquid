---
pagination:
data: recipes-contentful
size: 1
alias: recipe
addAllPagesToCollections: true
permalink: "{{ recipe.title | slug }}/"
tags: "recipe"
layout: recipies.liquid

renderData:
title: "{{ recipe.title }}"
subTitle: "{{ recipe.shortDescription }}"
thumbnail: "{{ recipe.thumbnail.fields.file.url}}?q=100"
webTitle: "Festa di Famiglia"
webTitleSlug: "Festa-di-Famiglia"
---

<div class="box">
    chief: {{ recipe.chef }}
</div>

<div class="box">
    servings: {{ recipe.servings }}
</div>

<div class="box">
    Prep Time: {{ recipe.pTime }}
</div>

<div class="box">
    Cooking Time: {{ recipe.cTime }}min
</div>

<div class="box">
    categories:
    {%- for categories in recipe.categories -%}
    <a class="button">{{categories}}</a>
    {%- endfor -%}
</div>

<div class="box">
    Ingredients:
    <div class="content is-normal">
        <ul>
            {%- for ingredients in recipe.ingredients -%}
            <li>{{ingredients}}</li>
            {%- endfor -%}
        </ul>
    </div>
</div>

<div class="box">
    level:  {% assign handle = recipe.level %}
    {% case handle %}
    {% when 1 %}
    <i class="fas fa-star"></i> <i class="far fa-star"></i> <i class="far fa-star"></i>
    {% when 2 %}
    <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="far fa-star"></i>
    {% when 3 %}
    <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
    {% endcase %}
</div>

<div class="box">
    instructions:
    <div class="content is-normal">
        <ul>
            {%- for instructions in recipe.instructions -%}
            <li>{{instructions}}</li>
            {%- endfor -%}
        </ul>
    </div>
</div>

{% if recipe.chefsComments %}
<div class="box">
    <div class="content is-normal">
        Chef's comments: {{ recipe.chefsComments }}
    </div>
</div>
{% endif %}

{% if recipe.bio %}
<div class="box">
    <div class="content is-normal">
        Recipe Bio: {{ recipe.bio }}
    </div>
</div>
{% endif %}
---
pagination:
    data: recipes-contentful
    size: 1
    alias: recipe
    addAllPagesToCollections: true
permalink: "{{ recipe.title | slug }}/"
tags: "recipe"
layout: recipies.liquid

renderData:
title: "{{ recipe.title }}"
subTitle: "{{ recipe.shortDescription }}"
thumbnail: "{{ recipe.thumbnail.fields.file.url}}?q=100"
webTitle: "Festa di Famiglia"
webTitleSlug: "Festa-di-Famiglia"
---

<div class="box">
    <b>chief:</b> {{ recipe.chef }}
</div>

<div class="box">
    <b>level:</b>  {% assign handle = recipe.level %}
    {% case handle %}
    {% when 1 %}
    <i class="fas fa-star"></i> <i class="far fa-star"></i> <i class="far fa-star"></i>
    {% when 2 %}
    <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="far fa-star"></i>
    {% when 3 %}
    <i class="fas fa-star"></i> <i class="fas fa-star"></i> <i class="fas fa-star"></i>
    {% endcase %}
</div>

<div class="box">
    <b>categories:</b>
    {%- for categories in recipe.categories -%}
    <a class="button">{{categories}}</a>
    {%- endfor -%}
</div>

<div class="box">
    <b>Cooking Time:</b> {{ recipe.cTime }}min
</div>

<div class="box">
    <b>Ingredients:</b>
    <div class="content is-normal">
        <ul>
            {%- for ingredients in recipe.ingredients -%}
            <li>{{ingredients}}</li>
            {%- endfor -%}
        </ul>
    </div>
</div>

<div class="box">
    <b>servings:</b> {{ recipe.servings }}
</div>

<div class="box">
    <b>Prep Time:</b> {{ recipe.pTime }}
</div>

<div class="box">
    <b>instructions:</b>
    <div class="content is-normal">
        <ul>
            {%- for instructions in recipe.instructions -%}
            <li>{{instructions}}</li>
            {%- endfor -%}
        </ul>
    </div>
</div>

{% if recipe.chefsComments and recipe.chefsComments != null and recipe.chefsComments != "" %}
<div class="box">
    <div class="content is-normal">
        <b>Chef's comments:</b> {{ recipe.chefsComments }}
    </div>
</div>
{% endif %}

{% if recipe.bio and recipe.bio != null and recipe.bio != "" %}
<div class="box">
    <div class="content is-normal">
        <b>Recipe Bio:</b> {{ recipe.bio }}
    </div>
</div>
{% endif %}